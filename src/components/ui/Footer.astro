---
import { Image } from "astro:assets";
import Facebook from "../../assets/facebook.svg";
import Linkedin from "../../assets/linkedin.svg";
import Logo from "../../assets/logo-alt.svg";
import Twitter from "../../assets/twitter.svg";
import ShortForm from "../ui/ShortForm.astro";

const logos = [
  { name: "Facebook", src: Facebook, link: "https://facebook.com" },
  { name: "Linkedin", src: Linkedin, link: "https://linkedin.com" },
];

const links = [
  { name: "Home", href: "/" },
  { name: "Services", href: "/#services" },
  { name: "Use Cases", href: "/#cases" },
  { name: "Pricing", href: "/pricing" },
];
---

<section class="sm:px-5">
  <div class="w-full max-w-[1240px] mx-auto">
    <div
      class="px-[15px] bg-dark text-gray py-[35px] lg:px-[60px] sm:rounded-t-[45px]"
    >
      <div>
        <div
          class="flex flex-col lg:flex-row gap-7 items-center justify-between"
        >
          <picture>
            <a href="#home">
              <Image src="/Logo-dark.svg" alt="Logo for Kreatif Brand" width={300} height={56} />
            </a>
          </picture>
          <ul class="flex flex-col sm:flex-row gap-5">
            {
              links.map((link) => {
                return (
                  <li class="text-center">
                    <a class="underline" href={link.href}>
                      {link.name}
                    </a>
                  </li>
                );
              })
            }
          </ul>
          <ul class="flex gap-5">
            {
              logos.map((logo) => {
                return (
                  <li>
                    <a href={logo.link} target="_blank">
                      <picture>
                        <Image src={logo.src} alt={logo.name} />
                      </picture>
                    </a>
                  </li>
                );
              })
            }
          </ul>
        </div>

        <div class="flex flex-col lg:flex-row mt-[40px] mb-[30px]">
          <div
            class="flex text-center lg:text-start flex-col w-full lg:w-[30%]"
          >
            <h3 class="mb-4 text-center md:text-left text-2xl text-green">Contact us</h3>
            <div class="flex flex-col justify-between gap-3">
              <span> Email: ioseb.didebuli@gmail.com </span>
              <span> Phone: +995 598508571 </span>
              <span class="lg:w-3/4">
                Address: Tech Park, Ozurgeti, Georgia.
              </span>
            </div>
          </div>
          <div class="flex-grow my-8 lg:my-0 lg:ml-12">
            <ShortForm />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
